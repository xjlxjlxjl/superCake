/**index.wxss**/
page{}
.personalCenter{  
  background-color: #000000;
  background-size: 100%;
  background-position: center center;
  margin: 15rpx;
  border-radius: 10px;
  display: flex;
  align-items: center;
  padding: 0px 0px 0px 30px;
  color: #333333;
  /* color: #FFFFFF; */
  font-size: 16px;
  height: 250rpx;
}
/* 头像框 */
.personalCenter image{
  border-radius: 100px;
  overflow: hidden;
  width: 150rpx;
  height: 150rpx;
  margin-right: 20px;
}
.personalCenter text{
  display: block;
  line-height: 1.8;
}
/*名字  */
.nickName{
  font-size: 18px;
  letter-spacing: 2px;
}
/*性别  */
.gender{
  letter-spacing: 1px;
  font-size: 14px;
  color: #b3a178;
}
/*会员权益  */
.membership{
  display: flex;
  justify-content: space-around;
  font-size: 14px;
  padding: 8px 15rpx 15px 15rpx;
}
.rights{
  font-size: 24px;
  font-weight: bold;
}
.membership view{
  display: flex;
  flex-direction: column;
  line-height: 1.6;
}
.membership navigator{
  display: flex;
  white-space: nowrap;
  align-items: baseline;
}

/*我的订单  */
.myOrder{
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  color: #726964;
  font-size: 14px;
  padding: 10px;
  border-bottom: 1px solid #DDDDDD;
  background-color: #FFFFFF;
  line-height: 1.3;
  border-radius:0;
}
.myOrder::after{
  border: none;
}

.classification{
  display: flex;
  /* flex-wrap: wrap; */
  text-align: center;
  padding-top: 5rpx;
  padding-bottom: 20rpx;
}
.classificationNav{
  width: 25%;
  padding: 5rpx;
  color: #726964;
}
.classificationNav > icon{
  font-size: 26px;
}
.classificationNav > text{
  padding: 5rpx;
  display: block;
  font-size: 14px;
}
/* 骑手接单 */
.receipt{
  float: right;
  font-size: 14px;
  background-color: #003670;
  color: #FFFFFF;
  display: inline-block;
  padding: 8px;
  border-radius: 5px;
}
/* 获取用户电话 */
.getUserNumber{
  font-size: 14px;
  background-color: #FFFFFF;
  border-radius: 0px;
  padding:5px 20px;
  line-height:2.4;
  text-align: left;
  color: #726964;
}
.getUserNumber::after{
  border-radius: 0px;
}
/* 其他服务 */
.otherServices{
  padding-top: 2px;
  background-color: #EEEEEE;
  color: #726964;
  font-size: 14px;
}
.otherServices > view{
  background-color: #FFFFFF;
  padding: 10px;
}
.otherServices > view > text{
  display: block;
  padding: 10px;
  border-bottom: 1px solid #DDDDDD;
}
.otherServices .myOrder{
  padding: 5px 10px 15px 10px;
}